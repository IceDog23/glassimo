{% capture listItems %}
{% for item in collections[settings.collection_home].products limit: settings.collection_home_limit %}
<div role="listitem" class="product-item w-dyn-item">
            <a href="{{ item.url }}" class="link-block w-inline-block">
              <div class="overlay-on-product"></div><img alt="{{ item.title }}" src="{{ item.featured_image | img_url: 'master' }}" height="254" class="product-photo" data-commerce-type="variation-image" srcset="{{ item.featured_image | img_url: '1920x' }} 1920w,{{ item.featured_image | img_url: '1600x' }} 1600w,{{ item.featured_image | img_url: '1366x' }} 1366w,{{ item.featured_image | img_url: '1024x' }} 1024w,{{ item.featured_image | img_url: '768x' }} 768w,{{ item.featured_image | img_url: '640x' }} 640w">
              <div class="product-text-fields">
                <div class="product-namexdesigner-wrapper">
                  {%- assign refItem = item.metafields.custom.designer_3.value -%}<div class="designer-name">{{ refItem.name }}</div>
                  <div class="product-name">{{ item.title }}</div>
                </div>
                <div data-commerce-type="variation-price" class="price">{{ item.price | money_with_currency }}</div>
              </div>
            </a>
          </div>
{%- endfor -%}
{% endcapture %}
{% assign items_length = listItems | strip | size %}
<div id="w-node-e9a829c9-0b99-b598-f87b-ad3e0edd12a5-0cad2175" class="product-list-wrapper w-dyn-list" udy-collection="product">
        {%- unless items_length == 0 -%}<div shopify="recommended" role="list" class="product-list w-dyn-items">
          {{ listItems }}
        </div>{%- endunless -%}
        {%- if items_length == 0 -%}<div class="w-dyn-empty">
          <div>No items found.</div>
        </div>{%- endif -%}
      </div>