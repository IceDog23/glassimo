{% capture listItems %}
           {%- assign allItems = metaobject['produkty'].value -%}
           {%- for item in allItems -%}
        <div role="listitem" class="product-item w-dyn-item">
          <a href="{{ item.url }}" class="link-block w-inline-block">
            <div class="overlay-on-product"></div><img alt="{{ item.featured_image.alt }}" src="{{ item.featured_image | img_url: 'master' }}" height="254" class="product-photo" data-commerce-type="variation-image" srcset="{{ item.featured_image | img_url: '1920x' }} 1920w,{{ item.featured_image | img_url: '1600x' }} 1600w,{{ item.featured_image | img_url: '1366x' }} 1366w,{{ item.featured_image | img_url: '1024x' }} 1024w,{{ item.featured_image | img_url: '768x' }} 768w,{{ item.featured_image | img_url: '640x' }} 640w">
            <div class="product-text-fields">
              {%- assign refItem = item.metafields.custom.designer.value -%}<div class="designer-name">{{ refItem.jmeno }}</div>
              <div class="product-name">{{ item.title }}</div>
              <div data-commerce-type="variation-price" class="price">{{ item.price | money_with_currency }}</div>
            </div>
          </a>
        </div>
           {%- endfor -%}
           {% endcapture %}
           {% assign items_length = listItems | strip | size %}
           
    <div id="w-node-a14303ea-4a36-f38d-23e2-1fc868c62a6c-65c751a0" class="product-list-wrapper w-dyn-list" udy-collection="product">
      {%- unless items_length == 0 -%}<div fs-countitems-element="list" role="list" class="product-list w-dyn-items">
        {{ listItems }}
      </div>{%- endunless -%}
      {%- if items_length == 0 -%}<div class="empty-state-2 w-dyn-empty">
        <div class="text-block-19">Žádné produkty k nalezení..</div>
      </div>{%- endif -%}
    </div>