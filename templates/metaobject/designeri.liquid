  <script> document.addEventListener("DOMContentLoaded", function() {
    // Funkce pro zjištění aktuálního času a dne v týdnu uživatele
    function checkTimeAndDay() {
        // Získání aktuálního času uživatele
        var now = new Date();
        // Získání hodin a dnů
        var hour = now.getUTCHours() + 2; // Pro časovou zónu UTC+2 (Praha)
        var day = now.getUTCDay(); // 0-6, kde 0 je Neděle
        // Definice prvků podle class
        var openElement = document.querySelector('.open-time');
        var closedElement = document.querySelector('.closed-time');
        // Kontrola času a dne
        if (day >= 1 && day <= 5 && hour >= 12.5 && hour < 18) {
            // Pokud je otevřeno
            openElement.style.display = 'flex';
            closedElement.style.display = 'none';
        } else {
            // Pokud je zavřeno
            openElement.style.display = 'none';
            closedElement.style.display = 'flex';
        }
    }
    // Spuštění funkce při načtení stránky
    checkTimeAndDay();
    // Volitelně můžete pravidelně aktualizovat stav (např. každou minutu)
    setInterval(checkTimeAndDay, 60000);
});
</script>

